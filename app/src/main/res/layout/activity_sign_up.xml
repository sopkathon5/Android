<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.signup.SignUpActivity">

    <!--회원가입 bar-->
    <RelativeLayout
            android:id="@+id/rl_set_bar_sign_up_act"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <!--뒤로가기버튼-->
        <RelativeLayout
                android:id="@+id/btn_write_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="16dp"/>

        </RelativeLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="회원가입"
                android:textColor="#707070"
                android:textSize="18sp"/>

    </RelativeLayout>


    <!--회원가입 정보 입력 창-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_set_bar_sign_up_act"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="56dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!--이메일(아이디)입력-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/signup_round_box">

                <EditText
                        android:id="@+id/et_id_signup_act"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:textCursorDrawable="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:background="@null"
                        android:hint="이메일(아이디)"
                        android:textColorHint="#cecece"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentLeft="true"/>

            </RelativeLayout>

            <!--비밀번호-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/signup_round_box">

                <EditText
                        android:id="@+id/et_password_signup_act"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="16dp"
                        android:maxLines="1"
                        android:background="@null"
                        android:hint="비밀번호"
                        android:textColorHint="#cecece"
                        android:layout_marginRight="8dp"
                        android:textSize="14sp"/>

            </RelativeLayout>

            <!--닉네임-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/signup_round_box">

                <EditText
                        android:id="@+id/et_nickname_signup_act"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="닉네임"
                        android:textCursorDrawable="@null"
                        android:textColorHint="#cecece"
                        android:textSize="14sp"/>

            </RelativeLayout>

            <!--성별-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp">

                <TextView
                        android:id="@+id/tv_sex_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:textSize="16sp"
                        android:text="성별"
                />

                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/tv_sex_radio_btn"
                >
                    <RadioButton
                            android:id="@+id/rg_btn_man"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="남" />

                    <RadioButton
                            android:id="@+id/rg_btn_woman"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="여"/>

                </RadioGroup>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--완료버튼-->
    <RelativeLayout
            android:id="@+id/rl_complete_btn_signup__act"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="#e2e2e2 ">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="완료"
                android:textColor="#ffffff"
                android:textSize="18sp"/>

    </RelativeLayout>

</RelativeLayout>

