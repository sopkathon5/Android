<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.home.tag.tagWrite.TagWriteActivity">

    <LinearLayout
            android:layout_above="@+id/act_tag_write_iv_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.Toolbar
                android:id="@+id/act_tag_write_tb_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            <TextView
                    android:id="@+id/act_tag_write_tv_title"
                    android:layout_gravity="center"
                    android:text="글 쓰기"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/act_tag_write_tv_post"
                    android:layout_gravity="end"
                    android:text="완료"
                    android:textSize="20sp"
                    android:layout_marginRight="16dp"
                    android:textColor="#ff5959"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/act_tag_write_tv_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:text="#MP3"/>

            <EditText
                    android:id="@+id/act_tag_write_et_title"
                    android:layout_marginLeft="13dp"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="추가 해시태그로 제목을 작성해주세요."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <View
                android:background="#c8c8c8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <EditText
                android:id="@+id/act_tag_write_et_contents"
                android:gravity="top"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="12sp"
                android:background="@null"
                android:hint="오늘의 주제는 ‘MP3’에 대한 불편입니다.\n여러분은 ‘MP3’에 어떤 추억을 갖고 있나요?\n여러분의 이야기를 들려주세요."
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <ImageView
            android:id="@+id/act_tag_write_iv_camera"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginVertical="12dp"
            android:src="@drawable/icon_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>