<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/store_back"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">

            <TextView
                    android:fontFamily="@font/nanum_extra_bold"
                    android:gravity="center"
                    android:text="추억상점"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"/>

        </FrameLayout>

        <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/market_icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp">
        <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/market_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:fontFamily="@font/nanum_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#383838"
                android:letterSpacing="-0.02"
                android:text="3,200"/>
        <TextView
                android:fontFamily="@font/nanum_bold"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#383838"
                android:letterSpacing="-0.02"
                android:text="₩"/>
        <RelativeLayout
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="@font/nanum_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.04"
                    android:text="추억 팔고 추억사고!"
            />
        </RelativeLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="@drawable/toolbar_dropshadow"/>



    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/store_back"
            android:layout_width="match_parent"
            android:layout_height="47dp">

        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

        <TextView
                android:fontFamily="@font/nanum_bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:textColor="#383838"
                android:letterSpacing="-0.04"
                android:text="문방구"/>

            <ImageView
                    android:background="#63617e"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>


        </LinearLayout>

        <TextView
                android:fontFamily="@font/nanum_bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#383838"
                android:letterSpacing="-0.04"
                android:text="편의점"/>

        <TextView
                android:fontFamily="@font/nanum_bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#383838"
                android:letterSpacing="-0.04"
                android:text="뷰티"/>
        <TextView
                android:fontFamily="@font/nanum_bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#383838"
                android:text="카페/베이커리"
                android:letterSpacing="-0.04"/>

        <RelativeLayout
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/market_icon_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
            android:background="#c8c8c8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_store_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>