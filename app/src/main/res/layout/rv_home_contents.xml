<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        app:cardElevation="3dp"
        android:layout_margin="5dp"
        android:id="@+id/rv_home_contents_cv_root_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/rv_home_contents_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rv_home_contents_rv"/>

        <RelativeLayout
                android:id="@+id/rv_home_contents_rv"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="47dp">

            <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rv_home_contents_tv_tag"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#태그"/>

            <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/rv_home_contents_tv_term"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~기간"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>